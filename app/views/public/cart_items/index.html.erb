<%= render 'layouts/userheader' %>
<div class="container">
<h1>カートアイテム一覧</h1>


<table class="table">
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税抜）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% @cartitems.each do |i| %>
        <tr>
            <td><%= i.item.name %></td>
            <td><%= i.item.non_taxed_price %></td>
            <td>
            <%= form_for i do |amount| %>
            <%= amount.number_field :amount,min:1,max:100,step:1 %>
            <%= amount.submit "変更",class:"btn btn-info" %>
            <% end %>
            </td>
            <td></td>
            <td><%= link_to "削除する",cart_item_path(i),method: :delete %></td>
        </tr>
    <% end %>
    </tbody>
</table>

</div>