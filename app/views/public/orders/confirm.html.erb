<%= render 'layouts/userheader' %>
<div class="container">
購入・注文情報確認画

<%= form_for(@new_order) do |f| %>
  <p>お支払方法</p>
    <p><%= @order_payment_method %></p>
    <%= f.hidden_field :payment_method, value: @order_payment_method %>
  <p>お届け先</p>
    <% case @order_delivery_info_kind %>
    <% when 'self' %>
      <p><%= current_end_user.address_info %></p>
      <%= f.hidden_field :postal_code, value: current_end_user.now_postal_code %>
      <%= f.hidden_field :address, value: current_end_user.now_address %>
      <%= f.hidden_field :name, value: current_end_user.full_name %>
    <% when 'other' %>
      <p><%= @other_address.other_address_info %></p>
      <%= f.hidden_field :postal_code, value: @other_address.postal_code %>
      <%= f.hidden_field :address, value: @other_address.address %>
      <%= f.hidden_field :name, value: @other_address.full_name %>
    <% when 'new' %>
      <p><%= @new_post_code + @new_street_address + @new_name %></p>
      <%= f.hidden_field :post_code, value: @new_post_code %>
      <%= f.hidden_field :address, value: @new_street_address %>
      <%= f.hidden_field :name, value: @new_name %>
    <% end %>
  <p>注文商品</p>
    <table>
      <tr>
        <th>商品名</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
      <% CartItem.all.each do |c_i| %>
      <tr>
        <td><%= c_i.item.name %></td>
        <td><%= c_i.amount %></td>
        <td>〇〇円</td>
      </tr>
      <% end %>
      <tr>
        <td></td>
        <td>送料</td>
        <td>500円</td>
      </tr>
      <tr>
        <td></td>
        <td>合計</td>
        <td>〇〇円</td>
      </tr>
    </table>
  <%= f.submit "注文を確定する" %>
<% end %>

</div>