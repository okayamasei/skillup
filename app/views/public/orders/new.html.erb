<%= render 'layouts/userheader' %>
<div class="container">
購入・注文情報入力画面

<%= form_with(url: confirm_orders_path, local: true, method: :get) do |f| %>
  <p>支払い方法選択</p>
    <%= radio_button :order, :payment_method, 'クレジットカード' %>クレジットカード<br>
    <%= radio_button :order, :payment_method, '代引き' %>代引き<br>
    <%= radio_button :order, :payment_method, 'コンビニ支払い' %>コンビニ支払い
  <p>お届け先選択</p>
    <%= radio_button :order, :delivery_info_kind, :self %>自分の住所<br>
      <p><%= "〒" + current_end_user.now_postal_code + current_end_user.now_address %></p>
      <p>宛名：<%= current_end_user.last_name + current_end_user.first_name %></p>
    <%= radio_button :order, :delivery_info_kind, :other %>その他の住所<br>
      <p><%= collection_select :other, :address_id, current_end_user.addresses, :id, :other_address_info, :include_blank => "ーーーーー選択して下さい" %></p>
    <%= radio_button :order, :delivery_info_kind, :new %>新規住所登録<br>
      <p>郵便番号：<%= text_field :new, :postal_code %></p>
      <p>住所：<%= text_field :new, :address %></p>
      <p>宛名：<%= text_field :new, :name %></p>
    <%= submit_tag "注文確認画面へ" %>

<% end %>
</div>