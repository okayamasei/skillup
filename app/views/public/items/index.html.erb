<%= render 'layouts/userheader' %>
<div class="container">
商品一覧
<div class="row">
    <div class="col-xs-3">
    ジャンル検索
    </div>

    <div class="col-xs-9">
    <table>
        <thead>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
            </tr>
        </thead>

        <tbody>
            <% @items.each do |item| %>
                <tr>
                    <td><%= item.id %></td>
                    <td>
                        <%= link_to item_path(item) do %>
                            <%= item.name %>
                        <% end %>
                    </td>
                    <td><%= item.non_taxed_price %>円</td>
                    <td><%= item.genre.name %></td>
                    <td>
                    <% if item.status == "0" %>
                        <p>販売中</p>
                    <% else %>
                        <p>販売停止中</p>
                    <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    </div>
</div>
</div>