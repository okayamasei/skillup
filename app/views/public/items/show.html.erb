<%= render 'layouts/userheader' %>
<div class="container">
<h1>商品詳細</h1>
<div class="row">
    <div class="col-xs-3">
    <h3>ジャンル検索</h3>
    </div>
    <div class="col-xs-9">
        <div class="col-xs-5">
        <h3>写真ゾーン</h3>
        </div>
        <div class="col-xs-7">
        <h3><%= @item.name %></h3>
        <p><%= @item.text %></p>
        <h4>¥<%= @item.non_taxed_price %></h4>(税抜き)

        <%= form_for @cartitem,url: cart_items_path do |i| %>
        <%= i.hidden_field :end_user_id, :value => current_end_user.id %>
        <%= i.hidden_field :item_id, :value => @item.id %>
        <%= i.number_field :amount,min:1,max:100,step:1 %>
        <%= i.submit "カートに入れる", class:"btn btn-info" %>
        <% end %>
        </div>
    </div>
</div>
</div>