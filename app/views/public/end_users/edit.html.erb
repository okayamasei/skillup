<%= render 'layouts/userheader' %>
<div class="container">
<div class="row">
<h3>登録情報編集画面</h3><%= link_to "アカウント削除", end_user_registration_path, data: { confirm: "退会しますか?" }, method: :delete , class: "btn btn-danger"%>

<%= form_for(@user) do |f| %>
<div class="form-group col-xs-6">
<%= f.label :first_name, '氏名(姓)' %>
<%= f.text_field :first_name, class: 'form-control' %>
</div>
<div class="form-group col-xs-6">
<%= f.label :last_name, '氏名(名)' %>
<%= f.text_field :last_name, class: 'form-control' %>
</div>

<div class="form-group col-xs-6">
<%= f.label :first_name_kana, 'カナ(姓)' %>
<%= f.text_field :first_name_kana, class: 'form-control' %>
</div>
<div class="form-group col-xs-6">
<%= f.label :last_name_kana, 'カナ(名)' %>
<%= f.text_field :last_name_kana, class: 'form-control' %>
</div>

<div class="form-group col-xs-12">
<%= f.label :now_postal_code, '郵便番号' %>
<%= f.text_field :now_postal_code, class: 'form-control' %>
</div>

<div class="form-group col-xs-12">
<%= f.label :now_address, '住所' %>
<%= f.text_field :now_address, class: 'form-control' %>
</div>

<div class="form-group col-xs-12">
<%= f.label :phone_number, '電話番号' %>
<%= f.text_field :phone_number, class: 'form-control' %>
</div>

<div class="form-group col-xs-12">
<%= f.label :email, 'メールアドレス' %>
<%= f.email_field :email, class: 'form-control' %>
</div>

<div class="al-c"><%= f.submit 'プロフィール編集を完了する', class: 'btn btn-info' %></div>
<% end %>

</div>
</div>