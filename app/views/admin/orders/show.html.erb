<%= render 'layouts/adminheader' %>
<div class="container">
管理者注文詳細画
<table>
  <tr>
    <th>注文ステータス</th>
    <th>支払額</th>
    <th>支払い方法</th>
    <th>配送先</th>
    <th></th>
  </tr>
  <tr>
    <%= form_for(@order, url: admin_order_path(@order.id), method: :patch) do |o| %>
    <td><%= o.select :status, ['入金待ち','入金確認','制作中','発送準備中','発送済み'] %><%= o.submit '更新' %></td>
    <% end %>
    <td>〇〇円</td>
    <td><%= @order.payment_method %></td>
    <td><%= @order.order_address_info %></td>
  </tr>
</table>
<h2>注文商品一覧</h2>
<table>
  <tr>
    <th>商品名</th>
    <th>数量</th>
    <th>小計</th>
    <th>制作ステータス</th>
  </tr>
  <% CartItem.all.each do |o_i| %>
  <tr>
    <td><%= o_i.item.name %></td>
    <td><%= o_i.amount %></td>
    <td>〇〇円</td>
    <% if @order.status == '入金待ち' %>
      <td><%= o_i.make_status %></td>
    <% else %>
      
    <% end %>
  </tr>
  <% end %>
</table>



</div>
