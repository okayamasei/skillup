<%= render 'layouts/adminheader' %>
<div class="container">
<h1>ジャンル追加ジャンル追加・一覧画面</h1>

<%= form_for(@genre, url: admin_genres_path) do |f| %>

  <div class="field">
    <%= f.label :ジャンル %>
    <%= f.text_field :name %>
  </div>

  <label><%= f.radio_button :validity, "true" %>有効</label>
  <label><%= f.radio_button :validity, "false" %>無効</label>

  <%= f.submit "追加する" %>

<% end %>


<table>
    <thead>
        <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td>
                <% if genre.validity == true %>
                    <p>有効</p>
                <% else %>
                    <p>無効</p>
                <% end %>
                </td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

</div>