<%= render 'layouts/adminheader' %>
<div class="container">

<h1>ジャンル編集画面</h1>
<%= form_for(@genre, url: admin_genre_path, method: :patch) do |f| %>

  <div class="field">
    <%= f.label :ジャンル %>
    <%= f.text_field :name %>
  </div>

  <label><%= f.radio_button :validity, "true" %>有効</label>
  <label><%= f.radio_button :validity, "false" %>無効</label>

  <%= f.submit "編集する" %>

<% end %>
</div>