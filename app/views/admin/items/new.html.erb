<%= render 'layouts/adminheader' %>
<div class="container">
<h3>商品　新規登録画面</h3>
<div class="row">
    <div class="col-xs-4">
    <p class="btn btn-info">画像選択</p>
    </div>
    <div class="col-xs-8">
    <%= form_for @item,url: admin_items_path do |item| %>
    <%= item.label :商品名 %>
    <%= item.text_field :name %><br>
    <%= item.label :商品説明 %>
    <%= item.text_area :text %><br>
    <%= item.label :ジャンル %>
    <%= item.select :genre_id,Genre.all.map{|genre| [genre.name,genre.id]},include_blank: "--選択してください--" %><br>
    <%= item.label :税抜き価格 %>
    <%= item.text_field :non_taxed_price %>円<br>
    <%= item.label :販売ステータス %>
    <%= item.select :status,[["販売中","販売中"],["販売停止中","販売停止中"]],include_blank: "--選択してください--" %><br>
    <%= item.submit "新規登録", class:"btn btn-info" %>
    <% end %>
    </div>
</div>
</div>
